{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021", "es6", "DOM", "dom.iterable"],
    "types": ["./node_modules/user-agent-data-types"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "include": [
    "src/*",
    "src/**/*",
  ],
  "exclude": ["node_modules"]
}
